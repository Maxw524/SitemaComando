@model List<FuncionarioModel>
@{
    ViewData["Title"] = "Listagem De Funcionarios";
}
<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-asp-controller="Funcionario" asp-action="Criar">Adicionar Novo Funcionario</a>

    </div>
    <br />


    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class=" btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MenssagemErro"] != null)
    {

        <div class="alert alert-danger" role="alert">
            <button type="button" class=" btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h1 class="display-4">Listagem De Funcionarios</h1>
    <table class="table" id="table-Funcionario">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>     
                <th scope="col">Email</th>
                <th scope="col">Pontuacao</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (FuncionarioModel Funcionario in Model)
                {
                    <tr>
                        <th scope="row">@Funcionario.Id</th>
                        <td>@Funcionario.Nome</td>
                        <td>@Funcionario.Email</td>
                        <td>@Funcionario.Pontuacao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@Funcionario.Id" asp-asp-controller="Funcionario" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@Funcionario.Id" asp-asp-controller="Funcionario" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                   
                      
                    </tr>
                }
               
            }
        </tbody>
    </table>

